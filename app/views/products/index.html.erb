<div class="container">
  <h1>Product List</h1>

  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= product.description %></td>
          <td><%= link_to "Show", product, class: "btn btn-info" %></td>
          <td><%= link_to "Edit", edit_product_path(product), class: "btn btn-warning" %></td>
          <td><%= link_to "Destroy", product, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table><br>

  <%= link_to "New Product", new_product_path, class: "btn btn-success" %>
</div>
